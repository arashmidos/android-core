<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@color/white"
  tools:context="app.arash.androidcore.ui.activity.DoctorDetailActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="@color/white"
    android:elevation="4dp"
    android:gravity="right"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/color_primary"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/more_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/ic_more_vertical_24_dp"
        android:tint="@color/white" />

      <TextView
        android:id="@+id/doctor_name_tv"
        style="@style/IranSans.Medium"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center|right"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="@string/doctor_name" />
      <ImageView
        android:id="@+id/back_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/ic_back_24_dp" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
      android:id="@+id/tab_layout"
      style="@style/IranSans"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_gravity="right"
      android:background="@color/white"
      app:tabIndicatorColor="@color/color_primary"
      app:tabMode="fixed"
      app:tabSelectedTextColor="@color/color_primary"
      app:tabTextColor="@color/gray_9e" />

  </LinearLayout>

  <android.support.v4.view.ViewPager
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_gravity="right" />

</LinearLayout>
