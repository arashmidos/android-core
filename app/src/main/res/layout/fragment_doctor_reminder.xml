<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/gray_ee">
  <LinearLayout
    android:id="@+id/visit_empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_timetable_64_dp" />
    <TextView
      style="@style/IranSans.Light"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="34dp"
      android:gravity="center"
      android:text="@string/no_doctor_visit"
      android:textColor="@color/gray_75"
      android:textSize="14sp" />
    <TextView
      style="@style/IranSans"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="41dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:background="@drawable/rec_green_primary"
      android:text="@string/set_visit"
      android:textColor="@color/white"
      android:textSize="14sp" />
  </LinearLayout>
  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp" />
  <android.support.design.widget.FloatingActionButton
    android:id="@+id/add_fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:src="@drawable/ic_add_white_24_dp"
    app:backgroundTint="@color/color_primary"
    app:fabSize="normal" />
</RelativeLayout>