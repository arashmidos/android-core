<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/color_primary"
    android:elevation="5dp"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/done_img"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:src="@drawable/ic_check_black_24dp"
      android:tint="@color/white" />
    <TextView
      android:id="@+id/title"
      style="@style/IranSans.Medium"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:gravity="center|right"
      android:text="@string/register_weight_title"
      android:textColor="@color/white"
      android:textSize="16sp" />
    <ImageView
      android:id="@+id/close_img"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:src="@drawable/ic_close_24_dp"
      android:tint="@color/white" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/gray_ec"
    android:gravity="right|center_vertical">
    <TextView
      android:id="@+id/measure_label"
      style="@style/IranSans.Bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/new_weight"
      android:textColor="@color/green_54"
      android:textSize="12sp" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">
    <EditText
      android:id="@+id/measure_value"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:inputType="number" />
    <TextView
      android:id="@+id/measure_unit"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/weight_unit"
      android:textColor="@color/gray_75"
      android:textSize="14sp" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/gray_ec"
    android:gravity="right|center_vertical">
    <TextView
      android:id="@+id/measure_time_label"
      style="@style/IranSans.Bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/measure_time_label"
      android:textColor="@color/green_54"
      android:textSize="12sp" />
  </LinearLayout>
  <LinearLayout
    android:id="@+id/date_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">
    <TextView
      android:id="@+id/date_label_tv"
      style="@style/IranSans"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/date"
      android:textColor="@color/black_21"
      android:textSize="14sp" />
    <TextView
      android:id="@+id/date_value_tv"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/click_add_date"
      android:textColor="@color/gray_85"
      android:textSize="12sp" />
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray_e0" />
  <LinearLayout
    android:id="@+id/time_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">
    <TextView
      android:id="@+id/time_label_tv"
      style="@style/IranSans"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/hour"
      android:textColor="@color/black_21"
      android:textSize="14sp" />
    <TextView
      android:id="@+id/time_value_tv"
      style="@style/IranSans.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/click_add_time"
      android:textColor="@color/gray_85"
      android:textSize="12sp" />
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray_e0" />
</LinearLayout>