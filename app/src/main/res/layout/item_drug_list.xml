<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/more_items_img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:src="@drawable/ic_more_vertical_24_dp" />
  <ImageView
    android:id="@+id/star_img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginLeft="12dp"
    android:src="@drawable/ic_star_24_dp"
    android:visibility="gone" />
  <ImageView
    android:id="@+id/alarm_img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginLeft="12dp"
    android:src="@drawable/ic_bell_24_dp"
    android:visibility="gone" />
  <TextView
    android:id="@+id/drug_name_tv"
    style="@style/IranSans.Light"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:gravity="center|right"
    android:textColor="@color/black_21"
    android:textSize="14sp"
    tools:text="drugs" />
</LinearLayout>