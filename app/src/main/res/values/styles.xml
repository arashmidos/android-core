<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorAccent">@color/color_accent</item>
    <item name="android:textColor">#000000</item>
    <item name="android:editTextColor">#000000</item>
  </style>

  <style name="myDialog" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowMinWidthMajor">97%</item>
    <item name="android:windowMinWidthMinor">97%</item>
    <item name="colorPrimary">@color/color_primary</item>
  </style>

  <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@color/color_primary</item>
  </style>

  <style name="CheckBox" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@color/color_primary</item>
    <item name="colorAccent">@color/color_primary</item>
    <item name="fontPath">fonts/IRANSansMobile.ttf</item>
  </style>
  <style name="PhoneBack">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:tint">@color/white</item>
    <item name="android:src">@drawable/ic_back_24_dp</item>
  </style>
  <!--fonts-->
  <style name="IranSans">
    <item name="fontPath">fonts/IRANSansMobile.ttf</item>
  </style>

  <style name="IranSans.Bold">
    <item name="fontPath">fonts/IRANSansMobile_Bold.ttf</item>
  </style>

  <style name="IranSans.Light">
    <item name="fontPath">fonts/IRANSansMobile_Light.ttf</item>
  </style>

  <style name="IranSans.Medium">
    <item name="fontPath">fonts/IRANSansMobile_Medium.ttf</item>
  </style>

  <style name="IranSans.Ultra">
    <item name="fontPath">fonts/IRANSansMobile_UltraLight.ttf</item>
  </style>
  <style name="ToolbarTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:background">@color/red</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">fonts/IRANSansMobile_Bold.ttf</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="menu_labels_style">
    <item name="android:background">@drawable/fab_label_background</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="PhoneDesc">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_marginBottom">32dp</item>
    <item name="fontPath">fonts/IRANSansMobile_Light.ttf</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="PhoneImage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@drawable/ic_phone_42_dp</item>
    <item name="android:layout_marginTop">32dp</item>
    <item name="android:rotation">270</item>
    <item name="android:layout_marginBottom">32dp</item>
    <item name="layout_constraintRight_toRightOf">parent</item>
    <item name="layout_constraintTop_toBottomOf">@id/desc_tv</item>
  </style>

  <style name="PhoneEditText">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">32dp</item>
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:paddingBottom">9dp</item>
    <item name="android:background">@drawable/edit_text_state_background</item>
    <item name="android:gravity">center|right</item>
    <item name="android:hint">@string/mobile_number</item>
    <item name="android:imeOptions">actionDone</item>
    <item name="android:inputType">phone</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textColorHint">@color/gray_75</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">fonts/IRANSansMobile.ttf</item>
    <item name="layout_constraintLeft_toLeftOf">parent</item>
    <item name="layout_constraintRight_toLeftOf">@id/phone_iv</item>
    <item name="layout_constraintTop_toBottomOf">@id/desc_tv</item>
  </style>

  <style name="IntroButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">14sp</item>
    <item name="fontPath">fonts/IRANSansMobile_Medium.ttf</item>
    <item name="android:layout_margin">16dp</item>
    <item name="android:background">@drawable/intro_btn_bg</item>
  </style>

  <style name="CodeResendBtn">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginTop">40dp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:background">@drawable/resend_bg</item>
    <item name="android:elevation">4dp</item>
    <item name="android:textColor">@color/black_21</item>
    <item name="android:textSize">12sp</item>
    <item name="fontPath">fonts/IRANSansMobile_Medium.ttf</item>
    <item name="layout_constraintLeft_toLeftOf">parent</item>
    <item name="layout_constraintRight_toRightOf">parent</item>
    <item name="layout_constraintTop_toBottomOf">@id/code_edt</item>
    <item name="layout_constraintBottom_toBottomOf">parent</item>
  </style>

  <style name="CodeDesc" parent="PhoneDesc">
    <item name="android:textColor">@color/green_primary</item>
    <item name="fontPath">fonts/IRANSansMobile_Bold.ttf</item>
  </style>

  <style name="CodeError">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textColor">@color/red</item>
    <item name="android:text">@string/please_enter_code</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:textSize">10sp</item>
    <item name="fontPath">fonts/IRANSansMobile.ttf</item>
    <item name="layout_constraintLeft_toLeftOf">parent</item>
    <item name="layout_constraintRight_toRightOf">parent</item>
    <item name="layout_constraintTop_toBottomOf">@id/code_edt</item>
  </style>

  <style name="CodeResend">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textColor">@color/gray_75</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginTop">62dp</item>
    <item name="android:textSize">12sp</item>
    <item name="fontPath">fonts/IRANSansMobile.ttf</item>
    <item name="layout_constraintLeft_toLeftOf">parent</item>
    <item name="layout_constraintRight_toRightOf">parent</item>
    <item name="layout_constraintTop_toBottomOf">@id/code_edt</item>
  </style>
  <style name="AboutUsText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textColor">@color/black_21</item>
    <item name="android:textSize">13sp</item>
    <item name="android:gravity">right</item>
    <item name="fontPath">fonts/IRANSansMobile.ttf</item>
    <item name="android:lineSpacingExtra">15sp</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
  </style>

  <style name="ContactUsText" parent="AboutUsText">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">16dp</item>
  </style>

  <style name="Separators">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/separator</item>
  </style>
  <style name="ContactUsItemContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="ContactUsItemPhoneContainer">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">right</item>
  </style>

  <style name="ContactUsItemArrow">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@drawable/ic_arrow_left_18_dp</item>
    <item name="android:tint">@color/gray_e0</item>
    <item name="android:layout_marginLeft">12dp</item>
  </style>

  <style name="ContactUsItemPhoneNumber">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/black_21</item>
    <item name="android:textSize">15sp</item>
    <item name="android:layout_marginTop">9dp</item>
    <item name="fontPath">fonts/IRANSansMobile_Light.ttf</item>
  </style>

  <style name="ContactUsItemPhoneText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/gray_75</item>
    <item name="android:textSize">13sp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="fontPath">fonts/IRANSansMobile_Light.ttf</item>
  </style>

  <style name="ContactUsItemImage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">17dp</item>
    <item name="android:layout_marginRight">16dp</item>

  </style>
</resources>
